<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btSpanyol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="53dp"
        android:text="Liga Spanyol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btJerman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Liga Jerman"
        app:layout_constraintStart_toStartOf="@+id/btSpanyol"
        app:layout_constraintTop_toBottomOf="@+id/btSpanyol"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btItalia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Liga Italia"
        app:layout_constraintStart_toStartOf="@+id/btJerman"
        app:layout_constraintTop_toBottomOf="@+id/btJerman"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btInggris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Liga Inggris"
        app:layout_constraintStart_toStartOf="@+id/btItalia"
        app:layout_constraintTop_toBottomOf="@+id/btItalia"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>